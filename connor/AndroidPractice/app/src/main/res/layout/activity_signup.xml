<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/signup_id_et"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:hint="아이디(이메일)"
        android:textSize="17sp"
        android:textColorHint="@color/gray_color"
        android:textColorHighlight="@color/black"
        android:inputType="text"
        android:ems="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_tv"/>
    <TextView
        android:id="@+id/signup_atsign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/signup_id_et"
        app:layout_constraintTop_toTopOf="@id/signup_id_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_id_et"/>
    <EditText
        android:id="@+id/signup_email_et"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:hint="직접입력"
        android:textSize="17sp"
        android:textColorHint="@color/gray_color"
        android:textColorHighlight="@color/black"
        android:inputType="text"
        android:ems="9"
        app:layout_constraintStart_toEndOf="@id/signup_atsign_tv"
        app:layout_constraintTop_toTopOf="@id/signup_id_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_id_et"/>

    <ImageView
        android:id="@+id/signup_email_select_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintTop_toTopOf="@id/signup_id_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_id_et"
        app:layout_constraintEnd_toEndOf="@+id/signup_email_et"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/signup_email_error_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#B60202"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_email_et"
        android:layout_marginStart="20dp"
        android:visibility="gone"/>


    <EditText
        android:id="@+id/signup_name_et"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:hint="이름"
        android:textSize="17sp"
        android:textColorHint="@color/gray_color"
        android:textColorHighlight="@color/black"
        android:inputType="textPersonName"
        android:ems="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_id_et"/>

    <EditText
        android:id="@+id/signup_pass_et"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:hint="비밀번호"
        android:textSize="17sp"
        android:textColorHint="@color/gray_color"
        android:textColorHighlight="@color/black"
        android:inputType="textPassword"
        android:ems="18"
        app:layout_constraintTop_toBottomOf="@id/signup_name_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/signup_pass_on_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_input_password"
        app:layout_constraintEnd_toEndOf="@id/signup_pass_et"
        app:layout_constraintTop_toTopOf="@id/signup_pass_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_pass_et"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/gray_color"/>
    <EditText
        android:id="@+id/signup_passCheck_et"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:hint="비밀번호 확인"
        android:textSize="17sp"
        android:textColorHint="@color/gray_color"
        android:textColorHighlight="@color/black"
        android:inputType="textPassword"
        android:ems="18"
        app:layout_constraintTop_toBottomOf="@id/signup_pass_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/signup_passCheck_on_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_input_password"
        app:layout_constraintEnd_toEndOf="@id/signup_passCheck_et"
        app:layout_constraintTop_toTopOf="@id/signup_passCheck_et"
        app:layout_constraintBottom_toBottomOf="@id/signup_passCheck_et"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/gray_color"/>

    <TextView
        android:id="@+id/signup_signup_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="가입완료"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/select_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>