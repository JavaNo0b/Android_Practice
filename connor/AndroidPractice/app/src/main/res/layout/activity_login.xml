<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/login_close_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/btn_actionbar_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/login_flo_logo_iv"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_flo_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_close_iv"/>

    <EditText
        android:id="@+id/login_id_et"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="5dp"
        android:hint="아이디(이메일)"
        android:textSize="17sp"
        android:textColorHint="@color/gray_color"
        android:textColorHighlight="@color/black"
        android:inputType="text"
        android:ems="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_flo_logo_iv"/>
    <TextView
        android:id="@+id/login_atsign_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@"
        android:textSize="17sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/login_id_et"
        app:layout_constraintTop_toTopOf="@id/login_id_et"
        app:layout_constraintBottom_toBottomOf="@id/login_id_et"/>
    <EditText
        android:id="@+id/login_email_et"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="5dp"
        android:hint="직접입력"
        android:textSize="17sp"
        android:textColorHint="@color/gray_color"
        android:textColorHighlight="@color/black"
        android:inputType="text"
        android:ems="9"
        app:layout_constraintStart_toEndOf="@id/login_atsign_tv"
        app:layout_constraintTop_toTopOf="@id/login_id_et"
        app:layout_constraintBottom_toBottomOf="@id/login_id_et"/>

    <ImageView
        android:id="@+id/login_email_select_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintTop_toTopOf="@id/login_id_et"
        app:layout_constraintBottom_toBottomOf="@id/login_id_et"
        app:layout_constraintEnd_toEndOf="@+id/login_email_et"
        android:layout_marginEnd="5dp"/>

    <EditText
        android:id="@+id/login_pass_et"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textSize="17sp"
        android:textColorHint="@color/gray_color"
        android:textColorHighlight="@color/black"
        android:ems="18"
        app:layout_constraintTop_toBottomOf="@id/login_id_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/login_pass_on_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_input_password"
        app:layout_constraintEnd_toEndOf="@id/login_pass_et"
        app:layout_constraintTop_toTopOf="@id/login_pass_et"
        app:layout_constraintBottom_toBottomOf="@id/login_pass_et"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/gray_color"/>

    <TextView
        android:id="@+id/login_btn_tv"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/select_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_pass_et"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/login_findId_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:textColor="@color/gray_color"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/login_btn_tv"
        app:layout_constraintStart_toStartOf="@id/login_btn_tv"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/login_l_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textColor="@color/gray_color"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/login_findId_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_findId_tv"
        app:layout_constraintStart_toEndOf="@id/login_findId_tv"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:id="@+id/login_findPass_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 찾기"
        android:textColor="@color/gray_color"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/login_findId_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_findId_tv"
        app:layout_constraintStart_toEndOf="@id/login_l_tv"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/login_signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/login_findId_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_findId_tv"
        app:layout_constraintEnd_toEndOf="@id/login_btn_tv"/>

    <TextView
        android:id="@+id/login_T_btn_tv"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:text="아이디로 로그인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_findId_tv"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ico_20_logo_tid_white"
        app:layout_constraintTop_toTopOf="@id/login_T_btn_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_T_btn_tv"
        app:layout_constraintStart_toStartOf="@id/login_T_btn_tv"
        android:layout_marginStart="100dp"/>

    <TextView
        android:id="@+id/login_phone_btn_tv"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:text="휴대폰 번호 로그인"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/layer_list"
        android:padding="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_T_btn_tv"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_setting_phone"
        app:layout_constraintTop_toTopOf="@id/login_phone_btn_tv"
        app:layout_constraintBottom_toBottomOf="@id/login_phone_btn_tv"
        app:layout_constraintStart_toStartOf="@id/login_phone_btn_tv"
        android:layout_marginStart="95dp"/>

    <ImageView
        android:id="@+id/login_kakao_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/kakako_44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_phone_btn_tv"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:id="@+id/login_naver_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/naver_44"
        app:layout_constraintEnd_toStartOf="@id/login_kakao_iv"
        app:layout_constraintTop_toBottomOf="@id/login_phone_btn_tv"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"/>
    <ImageView
        android:id="@+id/login_apple_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/apple_44"
        app:layout_constraintStart_toEndOf="@id/login_kakao_iv"
        app:layout_constraintTop_toBottomOf="@id/login_phone_btn_tv"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>