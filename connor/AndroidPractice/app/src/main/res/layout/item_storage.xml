<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_storage_cover_img_cv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/item_storage_cover_img_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/img_album_exp2"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_storage_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LILAC"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/item_storage_cover_img_cv"
        app:layout_constraintStart_toEndOf="@id/item_storage_cover_img_cv"
        app:layout_constraintBottom_toTopOf="@id/item_storage_singer_tv"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/item_storage_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/gray_color"
        app:layout_constraintStart_toStartOf="@id/item_storage_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_storage_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_storage_cover_img_cv"
        android:layout_marginBottom="12dp"/>
    
    <ImageView
        android:id="@+id/item_storage_play_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/nugu_btn_play_32"
        app:layout_constraintTop_toTopOf="@id/item_storage_cover_img_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_storage_cover_img_cv"
        app:layout_constraintEnd_toStartOf="@id/item_storage_more_btn"
        android:visibility="visible"
        android:layout_marginEnd="5dp"/>
    <ImageView
        android:id="@+id/item_storage_pause_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/nugu_btn_pause_32"
        app:layout_constraintTop_toTopOf="@id/item_storage_cover_img_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_storage_cover_img_cv"
        app:layout_constraintEnd_toStartOf="@id/item_storage_more_btn"
        android:visibility="gone"
        android:layout_marginEnd="5dp"/>
    <ImageView
        android:id="@+id/item_storage_more_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_storage_cover_img_cv"
        app:layout_constraintBottom_toBottomOf="@id/item_storage_cover_img_cv"/>





</androidx.constraintlayout.widget.ConstraintLayout>