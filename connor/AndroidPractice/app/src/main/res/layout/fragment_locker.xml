<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/locker_locker_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관함"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/locker_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="15sp"
        android:textColor="@color/select_color"
        app:layout_constraintTop_toTopOf="@id/locker_locker_tv"
        app:layout_constraintBottom_toBottomOf="@id/locker_locker_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

<!--    TabLayout + ViewPager-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/locker_content_tb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/locker_locker_tv"
        app:tabGravity="fill"
        app:tabIndicatorColor="#3f3fff"
        app:tabIndicatorFullWidth="false"
        app:tabRippleColor="#00ff0000"
        app:tabSelectedTextColor="#3f3fff"
        app:tabTextAppearance="@style/tabTextSizeBold"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/locker_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/locker_content_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/storage_select_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/nugu_btn_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/locker_content_vp"
        android:layout_marginStart="20dp"
        android:visibility="visible"/>
    <ImageView
        android:id="@+id/storage_unselect_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/nugu_btn_down"
        app:tint="@color/select_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/locker_content_vp"
        android:layout_marginStart="20dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/storage_select_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체선택"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/storage_select_img"
        app:layout_constraintStart_toEndOf="@id/storage_select_img"
        app:layout_constraintBottom_toBottomOf="@id/storage_select_img"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/storage_unselect_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택해제"
        android:textSize="18sp"
        android:textColor="@color/select_color"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/storage_select_img"
        app:layout_constraintStart_toEndOf="@id/storage_select_img"
        app:layout_constraintBottom_toBottomOf="@id/storage_select_img"
        android:layout_marginStart="5dp"/>
    <ImageView
        android:id="@+id/storage_play_img"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_browse_arrow_right"
        app:layout_constraintStart_toEndOf="@id/storage_select_tv"
        app:layout_constraintTop_toTopOf="@id/storage_select_img"
        app:layout_constraintBottom_toBottomOf="@id/storage_select_img"
        android:layout_marginStart="20dp"/>
    <TextView
        android:id="@+id/storage_play_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체듣기"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/storage_play_img"
        app:layout_constraintTop_toTopOf="@id/storage_select_img"
        app:layout_constraintBottom_toBottomOf="@id/storage_select_img"/>

    <TextView
        android:id="@+id/storage_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/storage_select_img"
        app:layout_constraintBottom_toBottomOf="@id/storage_select_img"
        android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>