<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detail_sv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/detail_album_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앨범명"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/detail_album_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IU 5th Album \'LILAC\'"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/detail_album_tv"
                app:layout_constraintStart_toEndOf="@id/detail_album_tv"
                android:layout_marginStart="35dp"/>
            <TextView
                android:id="@+id/detail_artist_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아티스트"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/detail_album_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/detail_artist_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이유 (IU)"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/detail_artist_tv"
                app:layout_constraintStart_toStartOf="@id/detail_album_title_tv" />
            <TextView
                android:id="@+id/detail_publisher_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="발매사"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/detail_artist_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/detail_publisher_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오엔터테인먼트"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/detail_publisher_tv"
                app:layout_constraintStart_toStartOf="@id/detail_album_title_tv" />
            <TextView
                android:id="@+id/detail_agency_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기획사"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/detail_publisher_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"/>
            <TextView
                android:id="@+id/detail_agency_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDAM엔터테인먼트"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="@id/detail_agency_tv"
                app:layout_constraintStart_toStartOf="@id/detail_album_title_tv" />

            <TextView
                android:id="@+id/detail_album_intro_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="앨범소개"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/detail_agency_tv"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:id="@+id/detail_album_introduction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'아이유(IU)' 정규 5집 [LILAC]\n\n\n&quot;안녕 꽃잎 같은 안녕&quot;\n&quot;내 맘에 아무 의문이 없어 난 이 다음으로 가요&quot;\n\n\n20대의 마지막에 대해 \n.\n.\n.\n.\n.\n.\n.\n.\n.\n.\n.\n.\n.\n.\n.\n."
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/detail_album_intro_tv"
                app:layout_constraintStart_toStartOf="@id/detail_album_intro_tv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>