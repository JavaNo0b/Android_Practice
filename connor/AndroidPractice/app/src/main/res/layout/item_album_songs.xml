<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/album_song_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="   TITLE   "
        android:textSize="10sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/textview_background_select_color_radius"
        app:layout_constraintTop_toTopOf="@id/album_song_order_tv"
        app:layout_constraintBottom_toBottomOf="@id/album_song_order_tv"
        app:layout_constraintStart_toEndOf="@id/album_song_order_tv"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/album_song_order_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>


    <TextView
        android:id="@+id/album_list_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Flu"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/album_song_album_title_tv"/>

    <TextView
        android:id="@+id/album_list_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="11sp"
        android:textColor="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@+id/album_list_album_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/album_song_order_tv"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"/>

    <ImageView
        android:id="@+id/album_list_play_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_miniplayer_play"
        app:layout_constraintEnd_toStartOf="@+id/album_list_more_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/album_list_more_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>